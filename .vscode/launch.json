{
  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "js",
      "program": "${relativeFile}"
    },
      {
          "name": "Current TS File",
          "type": "node",
          "request": "launch",
          "runtimeArgs": ["-r", "ts-node/register"],
          "sourceMaps": true,
          "args": ["${relativeFile}"],
          "cwd": "${workspaceRoot}",
          "protocol": "inspector",
          "internalConsoleOptions": "openOnSessionStart"
      }
  ]
}